{
  "projects": [
    {
      "rootDirectory": "client",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "framework": "vite"
    },
    {
      "rootDirectory": "server",
      "buildCommand": "npm install",
      "outputDirectory": "api"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/$1" },
    { "source": "/(.*)", "destination": "/client/dist/index.html" }
  ]
}
